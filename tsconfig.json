{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "dom",
      "es2015",
      "es5",
      "es6"
    ],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "src"
  ]
}
