{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["dom", "es5", "es6", "esnext"],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "typeRoots": ["src/typings"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
