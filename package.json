{
    "version": "1.0.0",
    "private": true,
    "name": "rest-client",
    "author": {
        "name": "y1j2x34",
        "email": "y1j2x34@qq.com"
    },
    "main": "dist\\index.js",
    "description": "",
    "license": "MIT",
    "engines": {
        "node": "8.2.1"
    },
    "typings": "dist\\index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "commitmsg": "validate-commit-msg",
        "build": "tsc --project tsconfig.build.json",
        "start": "echo '(not ready)'",
        "format": "prettier --write \"{src,tests}/**/*.{js,jsx,ts,tsx}\"",
        "lint": "tslint --format verbose --type-check --fix --project tsconfig.json",
        "postlint": "npm run format",
        "test": "mocha --opts mocha.opts tests\\**\\*.test.ts",
        "coverage": "nyc npm test"
    },
    "config": {
        "validate-commit-msg": {
            "types": [
                "feat",
                "fix",
                "docs",
                "style",
                "refactor",
                "example",
                "perf",
                "test",
                "chore",
                "revert"
            ],
            "warnOnFail": false,
            "maxSubjectLength": 72,
            "subjectPattern": ".+",
            "subjectPatternErrorMsg": "subject does not match subject pattern!",
            "helpMessage": "\n# allowed type: feat, fix, docs, style, refactor, example, perf, test, chore, revert\n# subject no more than 50 chars\n# a body line no more than 72 chars"
        }
    },
    "devDependencies": {
        "@types/chai": "^4.1.3",
        "@types/mocha": "^5.2.0",
        "chai": "^4.1.2",
        "husky": "^0.14.3",
        "mocha": "^5.0.5",
        "nyc": "^11.7.3",
        "prettier": "^1.12.1",
        "ts-node": "^3.3.0",
        "tslint": "^5.8.0",
        "tslint-config-prettier": "^1.10.0",
        "typescript": "^2.6.1",
        "validate-commit-msg": "^2.14.0"
    }
}
