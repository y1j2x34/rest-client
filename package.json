{
    "version": "1.0.0",
    "private": true,
    "name": "rest-client",
    "author": {
        "name": "y1j2x34",
        "email": "y1j2x34@qq.com"
    },
    "main": "dist\\index.js",
    "description": "",
    "license": "MIT",
    "engines": {
        "node": "8.2.1"
    },
    "typings": "dist\\index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "commitmsg": "validate-commit-msg",
        "build": "node bin/rm dist/ && rollup -c rollup.config.js",
        "predev": "npm run lint && node bin/rm serve/",
        "dev": "rollup -c rollup.config.dev.js --watch",
        "format": "prettier --write \"{src,tests}/**/*.{js,jsx,ts,tsx}\"",
        "lint": "tslint --format verbose --fix --project tsconfig.json",
        "postlint": "npm run format",
        "test": "mocha --opts mocha.opts tests/specs/\\**\\*.test.ts",
        "coverage": "nyc npm test"
    },
    "config": {
        "validate-commit-msg": {
            "types": [
                "feat",
                "fix",
                "docs",
                "style",
                "refactor",
                "example",
                "perf",
                "test",
                "chore",
                "revert"
            ],
            "warnOnFail": false,
            "maxSubjectLength": 72,
            "subjectPattern": ".+",
            "subjectPatternErrorMsg": "subject does not match subject pattern!",
            "helpMessage": "\n# allowed type: feat, fix, docs, style, refactor, example, perf, test, chore, revert\n# subject no more than 50 chars\n# a body line no more than 72 chars"
        }
    },
    "devDependencies": {
        "@types/chai": "^4.1.3",
        "@types/file-type": "^5.2.1",
        "@types/mocha": "^5.2.0",
        "@types/superagent": "^3.5.8",
        "chai": "^4.1.2",
        "fs-extra": "^6.0.1",
        "husky": "^0.14.3",
        "mocha": "^5.0.5",
        "nyc": "^11.7.3",
        "prettier": "^1.12.1",
        "rollup": "^0.59.1",
        "rollup-plugin-browsersync": "^0.2.6",
        "rollup-plugin-commonjs": "^9.1.3",
        "rollup-plugin-fill-html": "^1.1.0",
        "rollup-plugin-json": "^3.0.0",
        "rollup-plugin-node-resolve": "^3.3.0",
        "rollup-plugin-typescript2": "^0.14.0",
        "superagent-mocker": "^0.5.2",
        "ts-loader": "^4.3.0",
        "ts-node": "^3.3.0",
        "tslint": "^5.8.0",
        "tslint-config-prettier": "^1.10.0",
        "typescript": "^2.8.3",
        "validate-commit-msg": "^2.14.0",
        "webpack": "^4.9.1"
    },
    "dependencies": {
        "file-type": "^8.0.0",
        "mime-db": "^1.33.0",
        "path": "^0.12.7",
        "superagent": "^3.8.3"
    }
}
